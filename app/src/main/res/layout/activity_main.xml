<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnPlanActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="See Your Plans"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAllActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="See All Trainings"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnPlanActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnPlanActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnPlanActivity" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="About us"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnAllActivity"
        app:layout_constraintStart_toStartOf="@+id/btnAllActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnAllActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>